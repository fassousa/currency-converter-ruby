# Local environment variables
# Copy to .env and edit values for local development

# Database Configuration
# Development: postgresql://postgres:password@localhost:5432/currency_converter_development
# Production: Set via DATABASE_URL environment variable
DATABASE_URL=postgresql://postgres:password@localhost:5432/currency_converter_development

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Rails Configuration
RAILS_ENV=development
SECRET_KEY_BASE=generate_with_rails_secret_for_production

# JWT Authentication
# Secret key for JWT token generation and validation
# Generate with: ruby -e "require 'securerandom'; puts SecureRandom.hex(64)"
JWT_SECRET_KEY=change_me_to_a_secure_random_string_in_production
DEVISE_JWT_SECRET_KEY=change_me_to_a_secure_random_string_in_production

# Currency API Configuration
# Get your API key from: https://currencyapi.com/
CURRENCY_API_KEY=your_currency_api_key_here

# Optional Production Configuration
# RAILS_LOG_LEVEL=info
# RAILS_MAX_THREADS=5
# RAILS_SERVE_STATIC_FILES=true
# RAILS_LOG_TO_STDOUT=true

# Development User Seeds
# Default credentials for seeded dev user
DEV_USER_EMAIL=admin@example.com
DEV_USER_PASSWORD=password
